class Solution {
    public int[] constructTransformedArray(int[] nums) {
        int n = nums.length;
        int[] a = new int[n];
        
        for (int i = 0; i < n; i++) {
            if (nums[i] > 0) {
                a[i] = nums[(i + nums[i]) % n];
            } else {
                a[i] = nums[(n + i - Math.abs(nums[i]) % n) % n];
            }
        }
        
        return a;
    }
}
